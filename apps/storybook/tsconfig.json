      "@orderly.network/ui-tradingview": [
        "../../packages/ui-tradingview/src"
      ],
      "@orderly.network/ui-tpsl": [
        "../../packages/ui-tpsl/src"
      ],
      "@orderly.network/types": [
        "../../packages/types/src"
      ],
      "@orderly.network/utils": [
        "../../packages/utils/src"
      ],
      "@orderly.network/trading-leaderboard": [
        "../../packages/trading-leaderboard/src"
      ]
    }
  },
  "include": ["src/**/*", ".storybook/**/*", "vite-env.d.ts"]
}